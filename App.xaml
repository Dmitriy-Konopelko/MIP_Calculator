<Application x:Class="MIP_Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MIP_Calculator"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!--Объявляем словарь ресурсов и формируем его слиянием из разных файлов ресурсов-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Шрифт-->
                <ResourceDictionary Source="Resourses/Styles/FontFamily.xaml"/>
                <ResourceDictionary Source="Resourses/Styles/FontSize.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>       
    </Application.Resources>
</Application>
